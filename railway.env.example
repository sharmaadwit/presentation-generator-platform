# Railway Environment Variables
# Copy this to railway.env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/presentation_generator
POSTGRES_PASSWORD=your_secure_database_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here

# AI Services (Your OpenAI API Key)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Service URLs
FRONTEND_URL=https://your-frontend-app.railway.app
AI_SERVICE_URL=https://your-ai-service.railway.app
REACT_APP_API_URL=https://your-backend-api.railway.app/api
REACT_APP_AI_SERVICE_URL=https://your-ai-service.railway.app

# File Storage
PRESENTATION_OUTPUT_DIR=/app/generated_presentations
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=50MB

# Optional: Web Scraping (if you want to enable it)
SCRAPING_PROXY_URL=your_proxy_url_here
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; PresentationGenerator/1.0)

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging
LOG_LEVEL=info
NODE_ENV=production
