# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/presentation_generator

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Service URLs
FRONTEND_URL=http://localhost:3000
AI_SERVICE_URL=http://localhost:8000

# File Storage
PRESENTATION_OUTPUT_DIR=./generated_presentations
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# Web Scraping
SCRAPING_PROXY_URL=your_proxy_url_here
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; PresentationGenerator/1.0)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
NODE_ENV=development
